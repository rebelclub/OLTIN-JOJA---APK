<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Официант: Наргиза"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:text="Всего заказов:10   На сумму:1 500 000"
        android:textAppearance="?android:textAppearanceMedium"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Стол №"
            android:layout_marginLeft="10dp"
            android:textAppearance="?android:textAppearanceMedium" />

        <EditText
            android:id="@+id/editStolNum"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:digits="\ 0123456789"
            android:inputType="number"
            android:maxLength="3"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_weight="0"
            android:numeric="integer" />

        <Button
            android:id="@+id/newOrderButton"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_new"
            android:onClick="onClickNewOrderButton"
            android:text="@string/new_schet"
            android:textColor="#FFFFFF"
            android:textSize="13.5sp"
            android:layout_weight="1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_refresh"
            android:onClick="onClickBtnRefresh"
            android:text="@string/refresh"
            android:textColor="#FFFFFF"
            android:textSize="13.5sp"
            android:layout_weight="1"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:layout_marginBottom="5.0dip"
        android:background="#ff6df9c8"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/tvOrderNum"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_weight="0.1"
            android:gravity="center_horizontal"
            android:text="№"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvStol"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_weight="0.17"
            android:text="Стол"
            android:gravity="center_horizontal"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvOtkrit"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_weight="0.37"
            android:text="Открыт"
            android:gravity="center_horizontal"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvZakrit"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_weight="0.25"
            android:text="Закрыт"
            android:gravity="center_horizontal"
            android:textColor="@color/clZakrit"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvSumma"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:text="Сумма"
            android:gravity="center_horizontal"
            android:textColor="@color/clZakrit"
            android:textStyle="bold"
            android:textSize="20sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/ordersListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/orderitem"
        android:layout_gravity="center_horizontal" />
</LinearLayout>