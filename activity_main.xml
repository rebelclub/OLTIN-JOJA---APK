<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="66dp"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/passwTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/pasw_shapka"
            android:textColor="#FCFCFD"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/passwEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:hint="@string/pasw_hint"
            android:inputType="numberPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="@color/design_textinput_error_color_light"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/enterButton"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:layout_gravity="center_horizontal"
            android:onClick="onClickEnterButton"
            android:background="@drawable/btn_sign_in"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textAllCaps="true"
            android:text="@string/btn_sign_in" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_version"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_35dp"
        android:text="@string/version"
        android:textAlignment="center"
        android:textColor="#F6F5F8"
        android:textSize="13sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dim10dp"
        android:text="@string/created"
        android:textAlignment="center"
        android:textColor="#F7F5F8"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>
