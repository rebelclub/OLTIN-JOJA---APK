<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_100dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/otdlist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_100dp"
                tools:listitem="@layout/schet_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </androidx.recyclerview.widget.RecyclerView>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray">

        <TextView
            android:visibility="gone"
            android:id="@+id/tvBlid"
            android:layout_width="40.0dip"
            android:layout_height="fill_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center"
            android:text="Id"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNaim"
            android:layout_width="@dimen/stolba1"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/blud_naim"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="120dp"
            android:layout_height="fill_parent"
            android:layout_row="0"
            android:layout_column="3"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/blud_price"
            android:textStyle="bold" />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/bludsListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            tools:listitem="@layout/bluditem" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/schetInfoView"
            android:layout_weight="1.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:paddingHorizontal="4dp"
            android:background="@android:color/holo_blue_dark"
            android:text="@string/shyot_id"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/kodEdt"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/search"
            android:layout_marginStart="4dp"
            android:textIsSelectable="false"
            android:layout_marginLeft="4dp" />

        <Button
            android:id="@+id/btnKod"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:focusable="true"
            android:onClick="onClickKodBtn"
            android:text="@string/search" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNum"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/num"
            android:textSize="@dimen/titletext"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/blyudo"
            android:textSize="@dimen/titletext"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/titletext"
            android:gravity="center"
            android:text="@string/kol_vo"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tsena"
            android:textSize="@dimen/titletext"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <ImageView
            android:layout_weight="0.5"
            android:src="@drawable/draw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/schetListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:padding="2dp"
            tools:listitem="@layout/zakazitem_new" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvWayter"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@android:color/holo_green_light"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="@string/kabina_usluga"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/tvItogo"
            android:layout_width="164dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20.0dip"
            android:layout_weight="0.46"
            android:gravity="center_vertical"
            android:text="@string/itogo"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_weight="0.34"
            android:onClick="onClickBtnSend"
            android:text="@string/btn_send"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>